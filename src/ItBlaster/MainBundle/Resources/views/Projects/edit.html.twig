{# Редактирование проекта #}
{% extends 'ItBlasterMainBundle::layout.html.twig' %}

{% block content %}
    <div class="col-lg-6">
        <form action="{{ path('project-edit',{'project_name':project.slug}) }}" method="post" {{ form_enctype(form) }} id="project-add-form" class="form" role="form">
            {{ form_errors(form) }}

            {% include 'ItBlasterMainBundle:Projects:form_fields.html.twig' with {'form': form} %} {# Поля формы #}

            {{ form_rest(form) }}

            <div>
                <button type="submit" class="btn">Сохранить</button>
                <a href="{{ path('projects') }}" class="btn">Вернуться</a>
            </div>
        </form>
    </div>
{% endblock content %}
