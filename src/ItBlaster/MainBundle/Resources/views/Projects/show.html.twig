{% extends 'ItBlasterMainBundle::layout.html.twig' %}

{% block javascripts %}
    {% javascripts
    '@ItBlasterMainBundle/Resources/public/js/frontend/projects/show.js'
    filter='?yui_js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div>
        <h2>{{ project.title }}</h2>
        {% if project.link %}
            <p class="help-block">
                <a href="{{ project.link }}" target="_blank" title="Открыть в новом окне">{{ project.link }} <img src="{{ asset('images/icons/external_link.png') }}" /></a>
            </p>
        {% endif %}

        {% if (project.links|length) %}

            <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Ссылка</th>
                    <th>Статус</th>
                    <th>Код ответа</th>
                    <th>Последнее обновление</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for link in project.links %}
                    <tr>
                        <td>{{ link.title }}</td>
                        <td><a href="{{ link.link }}" target="_blank" title="Открыть в новом окне">{{ link.getLinkShort }} <img src="{{ asset('images/icons/external_link.png') }}" /></a></td>
                        <td>
                            {% if(link.status) %}
                                <span class="btn-xs btn-success">OK</span>
                            {% else %}
                                <span class="btn-xs btn-danger">FAIL</span>
                            {% endif %}
                        </td>
                        <td>{{ link.statusCode }}</td>
                        <td>{{ link.lastCheck('d.m.Y H:i:s') }}</td>
                        <td class="project_table_actions">
                            <a href="" title="Обновить"><img src="{{ asset('images/icons/sinchronize.png') }}" alt="Обновить" /></a>
                            <a href="{{ path('project-link-edit',{'id':link.id}) }}" title="Редактировать"><img src="{{ asset('images/icons/edit.png') }}" alt="Редактировать" /></a>
                            <a href="{{ path('project-link-delete',{'id':link.id}) }}" class="project_link_delete" title="Удалить"><img src="{{ asset('images/icons/delete.png') }}" alt="Удалить" /></a>
                        </td>
                    </tr>
                {% endfor %}
                {#
                <tr class="success">
                    <td>/about.html</td>
                    <td>261</td>
                    <td>33.3%</td>
                    <td>$234.12</td>
                    <td>$234.12</td>
                </tr>
                <tr class="warning">
                    <td>/sales.html</td>
                    <td>665</td>
                    <td>21.3%</td>
                    <td>$16.34</td>
                    <td>$234.12</td>
                </tr>
                <tr class="danger">
                    <td>/blog.html</td>
                    <td>9516</td>
                    <td>89.3%</td>
                    <td>$1644.43</td>
                    <td>$234.12</td>
                </tr>#}
                </tbody>
            </table>
        </div>
        {% else %}
            <p class="col-lg-6">
                Не добавлено ни одной ссылки
            </p>
        {% endif %}

        <div class="col-lg-12">
            <a href="{{ path('project-link-add',{'project_name':project.slug}) }}" class="btn btn-sm btn-primary" title="Добавить ссылку">Добавить ссылку</a>
        </div>

    </div>
{% endblock content %}