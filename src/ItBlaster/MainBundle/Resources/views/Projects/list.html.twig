{% extends 'ItBlasterMainBundle::layout.html.twig' %}

{% block javascripts %}
    {% javascripts
    '@ItBlasterMainBundle/Resources/public/js/frontend/projects.js'
    filter='?yui_js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}

    {% if (project_list|length) %}
        <div class="table-responsive col-lg-12">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Адрес</th>
                        <th>Статус</th>
                        <th>Последняя проверка</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in project_list %}
                        <tr>
                            <td><a href="{{ path('project-show',{'project_name':project.slug}) }}">{{ project.title }}</a></td>
                            <td>
                                {% if project.link %}
                                    <a href="{{ project.link }}" target="_blank" title="Открыть в новом окне">{{ project.link }} <img src="{{ asset('images/icons/external_link.png') }}" /></a>
                                {% endif %}
                            </td>
                            <td>
                                {% if(project.status) %}
                                    <span class="btn-xs btn-success">OK</span>
                                {% else %}
                                    <span class="btn-xs btn-danger">FAIL</span>
                                {% endif %}
                            </td>
                            <td>{{ project.lastCheck('d.m.Y H:i:s') }}</td>
                            <td class="project_table_actions">
                                {#
                                {% if(project.active) %}
                                    <a href="" title="Распубликовать"><img src="{{ asset('images/icons/publish.png') }}" alt="Распубликовать" /></a>
                                {% else %}
                                    <a href="" title="Опубликовать"><img src="{{ asset('images/icons/unpublish.png') }}" alt="Опубликовать" /></a>
                                {% endif %}
                                #}
                                {% include 'ItBlasterMainBundle:Projects:actions.html.twig' with {'project': project} %} {# Действия над проектом #}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="col-lg-6">
            Не добавлено ни одного проекта
        </div>
    {% endif %}

    <div class="col-lg-12">
        <a href="{{ path('project-add') }}" class="btn btn-sm btn-primary" title="Добавить проект">Добавить проект</a>
    </div>

{% endblock content %}