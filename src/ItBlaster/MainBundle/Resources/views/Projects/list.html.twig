{% extends 'ItBlasterMainBundle::layout.html.twig' %}

{% block content %}

    {% if (project_list|length) %}
        <div class="table-responsive col-lg-6">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Статус</th>
                        <th>Последняя проверка</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in project_list %}
                        <tr>
                            <td><a href="{{ path('project-show',{'project_name':project.slug}) }}">{{ project.title }}</a></td>
                            <td>
                                {% if(project.status) %}
                                    <span class="btn btn-xs btn-success">OK</span>
                                {% else %}
                                    <span class="btn btn-xs btn-danger">FAIL</span>
                                {% endif %}
                            </td>
                            <td>{{ project.lastCheck('d.m.Y H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="col-lg-6">
            Не добавлено ни одного проекта
        </div>
    {% endif %}

    <div class="col-lg-12">
        <a href="{{ path('project-add') }}" class="btn btn-sm btn-primary">Добавить проект</a>
    </div>

{% endblock content %}